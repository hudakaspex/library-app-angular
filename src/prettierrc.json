{
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": true,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "as-needed",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "auto"
      }
    }
  ]
}
